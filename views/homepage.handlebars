<div class="container container-fluid mt-5">
  {{#each posts as |post|}}
  <div class="post">
    <a href="/api/posts/{{post.id}}">
    <h2>{{post.title}}</h2>
  </a>
    <p>Posted by: <span><a href="/user/{{post.user.id}}">{{post.user.username}}</a></span> on <span>{{format_time post.created_on}}</span></p>
    <p>{{post.contents}}</p>
  </div>
  {{/each}}
</div>



