<div>
    <form class="form post-form">
      <div class="form-group">
        <label for="post-title">New title:</label>
        <input value="{{post.title}}" class="form-input" type="text" id="post-title"/>
        <input value="{{post.id}}" class="form-input" type="hidden" id="post-id"/>

      </div>
      <div class="form-group">
        <label for="post-content">New contents:</label>
        <input value="{{post.contents}}" class="form-input" type="text" id="post-content"/>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Update Post</button>
      </div>
    </form>
</div>

<script src="/js/updatePost.js"></script>
